<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Tên bài hát"
        android:textColor="#fff"
        android:textSize="24sp" />
    <ImageView
        android:id="@+id/imageViewDisc"
        android:src="@drawable/cd"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:background="@null"
        android:src="@drawable/rewindtostart"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageButtonPrev"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="64dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_toRightOf="@+id/imageButtonPrev"
        android:background="@null"
        android:src="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageButtonPlay"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="42dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_toRightOf="@+id/imageButtonPlay"
        android:background="@null"
        android:src="@drawable/stop"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageButtonPause"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="42dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_toRightOf="@+id/imageButtonPause"
        android:background="@null"
        android:src="@drawable/forwardtoend"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageButtonNext"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="42dp"
        android:layout_height="wrap_content" />


    <SeekBar
        android:layout_alignParentBottom="true"
        android:id="@+id/seeBarSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/textViewTimeSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="80dp"
        android:textColor="#fff" />
    <TextView
        android:layout_marginLeft="320dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/textViewTimeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#fff" />

</RelativeLayout>